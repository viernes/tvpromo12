<?xml version="1.0" encoding="utf-8"?>
  <odoo>
    <data>
      <record id="inherit_fields_form" model="ir.ui.view">
        <field name="name">inherit.fields.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='tag_ids']" position="after">
            <field name="marca"/>
            <field name="target"/>
          </xpath>
        </field>
      </record>
      <record id="inherit_name_page" model="ir.ui.view">
        <field name="name">inherit.name.page</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
          <xpath expr="//form[1]/sheet[1]/notebook[1]//page[1]" position="attributes">
            <attribute name="string">Mecanica</attribute>
          </xpath>
        </field>
      </record>
      <record id="inherit_invisible_field" model="ir.ui.view">
        <field name="name">inherit.invisible.field</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
          <xpath expr="//form[1]/sheet[1]//h2[1]" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
        </field>
      </record>


<!-- Contador para el stat button start-->    
 <record id="action_odt_crm" model="ir.actions.act_window">
            <field name="name">ODT</field>
            <field name="res_model">odt.crm</field>
            <field name="view_mode">kanban,tree,form</field>
             <field name="domain">[('crm_odt_id', '=', active_id)]</field>
            <field name="context">{'search_default_crm_odt_id': active_id, 'default_crm_odt_id': active_id}</field>
            <field name="help" type="html">
                <p>
                    Odoo work orders management allows you to manage the pipeline of your tasks efficiently. You can track progress, discuss on tasks, attach documents, etc.
                </p>
            </field>
        </record>
      
      <record id="inherit_button_box" model="ir.ui.view">
        <field name="name">inherit.button.box</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
          <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-list" name="%(action_odt_crm)d" type="action">
                      <field name="odt_count" widget="statinfo" string="ODT"/>
               </button>
          </xpath>
        </field>
      </record>
<!-- Contador para el stat button end-->
      
      <record id="inherit_page" model="ir.ui.view">
        <field name="name">inherit.page</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
          <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
            <page name="brief" string="Brief">
              <group name="left">
                          <group name="brief">
                              <field name="product"/>
                              <field name="project"/>
                              <field name="term_promo_date"/>
                              <field name="temporalidad"/>
                              <field name="slogan_marca"/>
                              <field name="logo_marca"/>
                          </group>

                          <group name="reto_proyecto" string="Reto del Proyecto">
                              <field name="rp_1" />
                              <field name="rp_2" />
                              <field name="rp_3" />
                              <field name="rp_4" />
                          </group>
                          <group name="objetivo_negocio" string="Objetivo del Negocio">
                              <field name="on_1" />
                              <field name="on_2" />
                              <field name="on_3" />
                              <field name="on_4" />
                          </group>
                          <group name="objetivo_marca"  string="Objetivo de la Marca">
                              <field name="ob_1" />
                              <field name="ob_2" />
                              <field name="ob_3" />
                          </group>
                          <group name="caracter_marca" string="Caracter de la Marca">
                              <field name="cm_1" />
                              <field name="cm_2" />
                              <field name="cm_3" />
                              <field name="cm_4" />
                          </group>
                      </group>
                      <group name="right">
                          <group name="competidores">
                              <field name="qcs_1"/>
                              <field name="qcs_2"/>
                              <field name="qcs_3"/>
                          </group>
                          <group name="dialogo">
                              <field name="vh_1"/>
                              <field name="vh_2"/>
                              <field name="vh_3"/>
                          </group>
                          <group name="comunicar">
                              <field name="dc_1"/>
                              <field name="dc_2"/>
                              <field name="dc_3"/>
                          </group>
                          <group name="no_comunicar?">
                              <field name="qc_1"/>
                              <field name="qc_2"/>
                          </group>  
                          <group name="ccp">
                            <field name="ccp_1"/>
                            <field name="ccp_2"/>
                          </group>
                          <group name="quiz_11" string="¿CÓMO Y DÓNDEVAMOS A COMUNICAR EL PROYECTO?">
                            <field name="cdp_1"/>
                            <field name="cdp_2"/>
                            <field name="cdp_3"/>
                          </group>
                          <group name="quiz_12">
                             <fields name="qz_12"/>
                             <field name="qz_13"/>
                             <field name="qz_14"/>
                             <field name="qz_15"/>
                             <field name="qz_16"/>
                          </group>
                  </group>
            </page>
          </xpath>
        </field>
      </record>
      <!-- Agrega campo minutos al helpdesk en sla, nota* eliminar los nombres de campos en vista -->
     
      <record id="inherit_invisible_field" model="ir.ui.view">
              <field name="name">inherit.invisible.field</field>
              <field name="model">helpdesk.sla</field>
              <field name="inherit_id" ref="helpdesk.helpdesk_sla_view_form"/>
              <field name="arch" type="xml">
                <xpath expr="//field[@name='time_days']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='time_hours']" position="before">
                 <field name="time_minutes" class="oe_inline"/> minutes<br/> 
                </xpath>
              </field>
      </record>
     
      <record id="inherit_field" model="ir.ui.view">
              <field name="name">inherit.field</field>
              <field name="model">hr.expense.sheet</field>
              <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
              <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/group[1]" position="inside">
                  <group>
                    <field name="delivery_amount" />
                    <field name="prove_amount" />
                    <field name="returned" />
                    <field name="diferencia" />
                  </group>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="approved" />
                </xpath>
              </field>
      </record>
      <record id="inherit_inventary_field" model="ir.ui.view">
              <field name="name">inherit.inventary.field</field>
              <field name="model">stock.picking</field>
              <field name="inherit_id" ref="stock.view_picking_form"/>
              <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                  <field name="return_reason" attrs="{'invisible': [('scheduled_date','=',False)]}"/>
                  <field name="receive" attrs="{'invisible': [('scheduled_date','=',False)]}"/>
                </xpath>
              </field>
      </record>

      <record id="inherit_invisible_field_leaves" model="ir.ui.view">
              <field name="name">inherit.invisible.field.leaves</field>
              <field name="model">hr.leave</field>
              <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
              <field name="arch" type="xml">
                <xpath expr="//field[@name='request_unit_half']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='request_unit_half']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
              </field>
      </record>

    </data>
  </odoo>

